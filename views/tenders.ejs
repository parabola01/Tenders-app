<!DOCTYPE html>
<html>
<head>
    <title>Lista przetargów</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<nav>
    <a href="/">Strona główna</a>
    <a href="/tenders">Lista przetargów</a>
    <a href="/tenders/closed">Lista zakończonych przetargów</a>
    <a href="/tenders/add">Dodaj przetarg</a>
</nav>
<h1>Lista przetargów</h1>
<table>
    <tr>
        <th>#</th>
        <th>Tytuł</th>
        <th>Instytucja zamawiająca</th>
        <th>Data rozpoczęcia</th>
        <th>Data zakończenia</th>
    </tr>
    <% tenders.forEach((tender, index) => { %>
        <tr>
            <td><%= index + 1 %></td>
            <td><a href="/tenders/<%= tender.id %>"><%= tender.title %></a></td>
            <td><%= tender.institution %></td>
            <td><%= new Date(tender.startDate).toLocaleString() %></td>
            <td><%= new Date(tender.endDate).toLocaleString() %></td>
        </tr>
    <% }) %>
</table>
</body>
</html>
